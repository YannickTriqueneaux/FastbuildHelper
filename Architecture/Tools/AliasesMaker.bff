//By default build one of previous All- alias   |  chosen by .DefaultCompilerConfig   in the Compiler.bff
Alias( 'All' )
{
    Using(.DefaultCompilerConfig )
        
    .aliaseName = "All-$Platform$-$Config$"
    .Targets    = "$aliaseName$"
}
