



//FOR 32 bits only --------------------------------------------------------
ForEach(.CompilerConfig in.Compilerx86Configs)
{
    Using(.CompilerConfig)

    .aliaseName = "All-$Platform$-$Config$"

    Alias("$aliaseName$")
    {
        .Targets = {}//init by array type
        ForEach(.pname in .ProjectNames) //build all projects
        {
            ^Targets + "$pname$-$Platform$-$Config$"
        }
        ForEach(.pname in.ProjectTestNames) //add all test projects
        {
            ^Targets + "$pname$-$Platform$-$Config$"
        }
        ForEach(.pname in .x86OnlyProjectNames) //add all x64 only projects
        {
            ^Targets + "$pname$-$Platform$-$Config$"
        }
        ForEach(.pname in .x86OnlyProjectTestNames) //add all x64 only tests projects
        {
            ^Targets + "$pname$-$Platform$-$Config$"
        }
    }
}
