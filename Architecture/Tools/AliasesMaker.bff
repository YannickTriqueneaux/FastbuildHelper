

Alias( 'All' )
{
    Using(.DefaultCompilerConfig )

    .Targets = {}
    ForEach(.pname in .ProjectNames)
    {
        ^Targets + "$pname$-$Platform$-$Config$"
    }
    ForEach(.pname in .ProjectTestNames)
    {
        ^Targets + "$pname$-$Platform$-$Config$"
    }
}


ForEach(.CompilerConfig in.CompilerConfigs)
{
    Using(.CompilerConfig)

    .aliaseName = "All-$Platform$-$Config$"

    Alias("$aliaseName$")
    {
        .Targets = {}
        ForEach(.pname in .ProjectNames)
        {
            ^Targets + "$pname$-$Platform$-$Config$"
        }
        ForEach(.pname in .ProjectTestNames)
        {
            ^Targets + "$pname$-$Platform$-$Config$"
        }
    }
}
